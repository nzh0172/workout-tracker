        <!-- Example content -->
        <VBox fx:id="exerciseList" layoutX="20" layoutY="20" spacing="10">
            <!-- Dynamic exercise cards will go here -->
        </VBox>

        <HBox layoutY="400" spacing="20" alignment="CENTER">
