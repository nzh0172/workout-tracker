<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.workout_tracker_2.frontend.ExerciseUIController">
    <children>
        <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" 
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Timer Section -->
            <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #f5f5f5; -fx-padding: 10; -fx-border-color: #ccc; -fx-border-width: 1;">
                <Label fx:id="timerLabel" text="00:30:34" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            </HBox>
            
            <!-- Exercise Logging Section -->
            <VBox fx:id="exerciseList" spacing="10" style="-fx-background-color: white; -fx-padding: 10; -fx-border-color: #ccc; -fx-border-width: 1;">
                <!-- Dynamic content will be added here -->
            </VBox>

            <!-- Bottom Button Bar -->
            <HBox alignment="CENTER" spacing="20">
                <Button text="+" fx:id="addExerciseButton" style="-fx-font-size: 16px; -fx-background-color: #2196F3; -fx-text-fill: white;"/>
                <Button text="✔" fx:id="saveButton" style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button text="⏸" fx:id="pauseButton" style="-fx-font-size: 16px; -fx-background-color: #FF9800; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>