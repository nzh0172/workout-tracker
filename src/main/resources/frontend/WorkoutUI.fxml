<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.workout_tracker_2.frontend.ExerciseUIController">
    <!-- Timer at the top -->
    <top>
        <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #f5f5f5; -fx-padding: 10; -fx-border-color: #ccc; -fx-border-width: 1;">
            <Label fx:id="timerLabel" text="00:30:34" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Scrollable exercise list in the center -->
    <center>
        <ScrollPane fx:id="exerciseScrollPane" fitToWidth="true" style="-fx-padding: 10;">
            <VBox fx:id="exerciseList" spacing="10" style="-fx-background-color: white; -fx-padding: 10;">
                <!-- Dynamic exercise cards will be added here -->
            </VBox>
        </ScrollPane>
    </center>	

    <!-- Buttons at the bottom -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;">
            <Button text="+" fx:id="addExerciseButton" style="-fx-font-size: 16px; -fx-background-color: #2196F3; -fx-text-fill: white;"/>
            <Button text="✔" fx:id="saveButton" style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            <Button text="⏸" fx:id="pauseButton" style="-fx-font-size: 16px; -fx-background-color: #FF9800; -fx-text-fill: white;"/>
        </HBox>
    </bottom>
</BorderPane>