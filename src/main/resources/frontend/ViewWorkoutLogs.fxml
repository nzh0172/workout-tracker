<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.workout_tracker_2.frontend.WorkoutLogUIController" spacing="10" style="-fx-padding: 10;">
    <children>
        <!-- Title -->
        <Label text="Workout Logs" style="-fx-font-size: 25px; -fx-font-weight: bold;" />
        
        <!-- Scrollable area for logs -->
        <ScrollPane fitToWidth="true" style="-fx-background-color: white;">
            <VBox fx:id="logContainer" spacing="10" style="-fx-padding: 10;">
                <!-- Logs will be dynamically added here -->
            </VBox>
        </ScrollPane>

        <!-- Back button -->
        <Button text="Back" onAction="#goToMainUI" style="-fx-font-size: 14px; -fx-background-color: #FF9800; -fx-text-fill: white;" />
    </children>
</VBox>